# Prevent directory listing
Options -Indexes

# Enable URL rewriting
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /Eventorg/OMI/
    
    # Redirect root to index.html
    RewriteRule ^$ index.html [L]
    
    # Prevent access to sensitive files
    RewriteRule ^config/.*$ - [F,L]
    RewriteRule ^includes/.*$ - [F,L]
    RewriteRule ^database/.*$ - [F,L]
    RewriteRule ^logs/.*$ - [F,L]
    RewriteRule ^tests/.*$ - [F,L]
    RewriteRule ^\.git/.*$ - [F,L]
    
    # Allow access to specific file types
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot)$
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# PHP settings
<IfModule mod_php7.c>
    php_value upload_max_filesize 40M
    php_value post_max_size 40M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

# Custom error pages
ErrorDocument 404 /Eventorg/OMI/index.html
ErrorDocument 403 /Eventorg/OMI/index.html
ErrorDocument 500 /Eventorg/OMI/index.html
